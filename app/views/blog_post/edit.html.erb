<h1> Edit Blog Post </h2>

<%= form_with model: @blog_post, method: :patch, local: true do |form|  %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <br>
  <br>
  <%= form.label :content %>
  <%= form.text_area :content %>
  <br>
  <br>
  <%= form.submit 'Update Post' %>
  
  <% end %>
  
  <p><%=link_to "Main Post", root_path%><p>
  