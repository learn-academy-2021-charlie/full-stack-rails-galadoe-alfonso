<h1>Create a New Blog Post </h1>

<%= form_with model: @blog_post, local: true do |form|  %>
<%= form.label :title %>
<%= form.text_field :title %>
<br>
<br>
<%= form.label :content %>
<%= form.text_area :content %>
<br>
<br>
<%= form.submit 'Add Post' %>

<% end %>

<p><%=link_to "Main Post", root_path%><p>
